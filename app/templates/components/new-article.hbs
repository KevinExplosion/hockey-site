{{#if addNewArticle}}
<h3>New Article</h3>
<div class="row">
  <div class="col-md-6">
    <form>
      <div class="form-group">
        <div class="col-md-2">
          <label for="title">Title</label>
        </div>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <div class="col-md-2">
          <label for="author">Author</label>
        </div>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <div class="col-md-2">
          <label for="body">Body</label>
        </div>
        {{input value=body id="body"}}
      </div>

      <div class="form-group">
        <div class="col-md-2">
          <label for="image">Image URL</label>
        </div>
        {{input value=image id="image"}}
      </div>

      <button {{action 'save1'}}>Save</button>
    </form>
  </div>
</div>
{{else}}
  <button class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect"{{action 'articleFormShow' article}}>
    <i class="material-icons">add</i>
  </button>
{{/if}}
