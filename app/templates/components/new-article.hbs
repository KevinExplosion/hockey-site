{{#if addNewArticle}}
<h3>New Article</h3>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="body">Body</label>
      {{input value=body id="body"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <button {{action 'save1'}}>Save</button>
  </form>
</div>
{{else}}
  <button class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect"{{action 'articleFormShow' article}}>
    <i class="material-icons">add</i>
  </button>
{{/if}}
